<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-900 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-6 justify-center">
        <% posts.forEach(function(post) { %>
            <div class="card w-60 bg-zinc-800 p-4 rounded-lg shadow-lg hover:shadow-xl transition">
                <!-- Image -->
                <div class="w-full h-40 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover hover:scale-105 transition duration-300" src="/images/uploads/<%= post.image %>" alt="">
                </div>

                <!-- Title -->
                <h5 class="mt-3 text-lg font-semibold text-gray-200 truncate">
                    <%= post.title %>
                </h5>

                <!-- Description -->
                <p class="text-xs text-gray-400 mt-1 line-clamp-2">
                    <%= post.description %>
                </p>
            </div>
        <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs %>
