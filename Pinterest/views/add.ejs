<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-900 px-10 py-10 text-white flex justify-center">
        <div class="w-full max-w-lg bg-zinc-800 p-6 rounded-lg shadow-lg">
            <h1 class="text-2xl font-semibold mb-4 text-center">Create a New Post</h1>
            <hr class="opacity-10 mb-4">

            <form action="/createpost" method="post" enctype="multipart/form-data" class="space-y-4">
                <!-- Image Upload -->
                <label for="postimage"
                    class="block w-full px-4 py-3 bg-gray-700 text-white rounded-md cursor-pointer text-center hover:bg-gray-600 transition">
                    Upload Image
                    <input id="postimage" class="hidden" type="file" name="postimage">
                </label>

                <!-- Title Input -->
                <input
                    class="block w-full px-4 py-3 border border-gray-600 bg-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-red-500"
                    type="text" placeholder="Title" name="title">

                <!-- Description Input -->
                <textarea
                    class="block w-full h-40 px-4 py-3 border border-gray-600 bg-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-red-500"
                    placeholder="Description" name="description"></textarea>

                <!-- Submit Button -->
                <button
                    class="w-full px-4 py-3 bg-red-600 rounded-md text-white font-semibold hover:bg-red-700 transition">
                    Create Post
                </button>
            </form>
        </div>
    </div>

    <% include ./partials/footer.ejs %>